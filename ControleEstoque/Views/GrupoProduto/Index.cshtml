@model List<ControleEstoque.Models.GrupoProdutoModel>
@{
    ViewBag.Title = "Cadastro de Grupo de Produtos";
}
<link href="~/Content/bootstrap-select.css" rel="stylesheet" />
<link href="~/Content/Cadastro/CadGrupoProduto.css" rel="stylesheet" />

<div id="cadastro">
    <section id="cadastro_cabecalho">
        <h1>@ViewBag.Title</h1>
    </section>
    <section id="cadastro_conteudo">

        <div id="cabecalho_grid" class="row">
            <a id="btn_incluir" class="btn btn-success" role="button"><i class="glyphicon glyphicon-plus"></i> Incluir</a>
            @Html.DropDownList("ddl_tam_pag", (SelectList)ViewBag.ListaTamanhoPag, new { @class = "selectpicker" })
        </div>
        <div class="row">
            <div class="col-md-12">
                <table id="grid_cadastro" class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Ativo</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var linha = 0;
                            foreach (var item in Model)
                            {<!--Toda vez que usamos a variavel Model estamos fazendo referencia ao baind que está no topo do arquivo-->
                                linha = linha + 1;
                                if (linha <= 5)
                                {
                                    <tr data-id="@item.Id">
                                        <td>@item.Nome</td>
                                        <td>@{var ativo = (item.Ativo ? "SIM" : "NAO");}@ativo</td>
                                        <td>
                                            <a class="btn btn-primary btn-alterar" role="button"><i class="glyphicon glyphicon-pencil"></i> Alterar</a>
                                            <a class="btn btn-danger btn-excluir" role="button"><i class="glyphicon glyphicon-trash"></i> Excluir</a>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    break;
                                }

                            }
                        }
                    </tbody>
                </table>
            </div>
            <!--Paginação-->
            <nav>
                <ul class="pagination">
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    @for (int i = 2; i < ViewBag.QuantPaginas; i++)
                    {
                        <li class="page-item"><a class="page-link" href="#">@i</a></li>
                    }
                </ul>
            </nav>
        </div>
    </section>
</div>
@Html.Hidden("id_cadastro")
<div id="modal_cadastro" class="form-horizontal" style="display:none" role="dialog">
    <fieldset>
        @Html.AntiForgeryToken() <!--Gera o token de verificação-->
        <div id="msg_error_aviso" class="text-danger"></div>
        <div class="row">
            <div class="form-group">
                @Html.Label("txt_nome", "Nome", new { @class = "col-md-3 control-label" })
                <div class="col-md-12" style="margin-left:90px">
                    @Html.TextBox("txt_nome", null, new { @class = "form-control" })<!--Primeiro especificammos qual o id, depois o label e por ultimo alguma class CSS-->
                </div>
            </div>
            <div class="form-group">
                @Html.Label("cbx_ativo", "Ativo", new { @class = "col-md-3 control-label" })
                <div class="col-md-12" style="margin-left:90px">
                    @Html.CheckBox("cbx_ativo")
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="modal-footer">
                        <a id="btn_sair" class="btn btn-default" role="button" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i>Sair</a>
                        <a id="btn_confirmar" class="btn btn-primary" role="button"><i class="glyphicon glyphicon-ok"></i> Salvar</a>
                    </div>
                    <div id="msg_aviso" class="alert alert-warning">Falta preencher os campos acima!</div>
                    <div id="msg_error" class="alert alert-danger">Ops deu ruim!</div>
                </div>
            </div>
        </div>
    </fieldset>
</div>

@section Scripts{
    <script src="~/Scripts/bootstrap-select.js"></script>
    <script src="~/Scripts/Cadastro/CadGrupoProduto.js"></script>
    <script>
        var urlGrupoProdutoPagina = '@Url.Action("GrupoProdutoPagina", "GrupoProduto")',
            urlSalvarGrupoProduto = '@Url.Action("SalvarGrupoProduto", "GrupoProduto")',
            urlExcluirGrupoProduto = '@Url.Action("ExcluirGrupoProduto", "GrupoProduto")',
            urlRecuperarGrupoProduto = '@Url.Action("RecuperarGrupoProduto", "GrupoProduto")',
            titulo = '@ViewBag.Title';
    </script>
}